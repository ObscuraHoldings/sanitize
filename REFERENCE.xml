	window.SetDropCallback(onDrop)
	window.SetCloseCallback(func() bool {
		return !working && !showProgress
	})

	// Set universal DPI
	dpi = giu.Context.GetPlatform().GetContentScale()

	// Simulate dropping command line arguments
	flag.Parse()
	if flag.NArg() > 0 {
		onDrop(flag.Args())
	}

	// Start the UI
	window.Run(draw)
}
